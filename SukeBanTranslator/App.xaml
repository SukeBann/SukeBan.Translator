<Application x:Class="SukeBanTranslator.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:pu="clr-namespace:Panuon.UI.Silver;assembly=Panuon.UI.Silver"
             xmlns:sukeBanTranslator="clr-namespace:SukeBanTranslator">
    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary>
                    <sukeBanTranslator:AppBootstrapper x:Key="bootstrapper" />
                </ResourceDictionary>
                <ResourceDictionary Source="pack://application:,,,/SukeBanTranslator.Theme;component/Themes/Standard.xaml" />
                <ResourceDictionary Source="pack://application:,,,/SukeBanTranslator.Theme;component/Collections.xaml" />
                <ResourceDictionary>
                    <pu:GlobalSettings x:Key="globalSettings"
                                       FontSize="36"
                                       IconFontSize="20"
                                       IconFontFamily="{StaticResource PanuonIconFont}" />
                </ResourceDictionary>
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Application.Resources>
</Application>