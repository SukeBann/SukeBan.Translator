<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <Color x:Key="ThemeColor">#6981F8</Color>
    <Color x:Key="BackgroundColor">#FFFFFF</Color>
    <Color x:Key="ForegroundColor">#1E1E1E</Color>

    <SolidColorBrush x:Key="ThemeBrush_100"
                     Color="{StaticResource ThemeColor}" />
    <SolidColorBrush x:Key="ThemeBrush_70"
                     Color="{StaticResource ThemeColor}"
                     Opacity="0.7" />

    <SolidColorBrush x:Key="BackgroundBrush_100"
                     Color="{StaticResource BackgroundColor}" />

    <SolidColorBrush x:Key="ForegroundBrush_100"
                     Color="{StaticResource ForegroundColor}" />
</ResourceDictionary>