<UserControl x:Class="SukeBanTranslator.CustomControl.Views.DropDownRichTextBoxView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:SukeBanTranslator.CustomControl"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <RichTextBox>
        <RichTextBox.Template>
            <ControlTemplate>
                <Border Padding="10"
                        Background="{DynamicResource DropDownImageBrush}"
                        CornerRadius="24">
                    <RichTextBox BorderThickness="0"
                                 VerticalScrollBarVisibility="Visible"
                                 FontFamily="Fira Code Medium"
                                 Foreground="#E8E8F8"
                                 FontSize="16"
                                 Background="Transparent">
                    </RichTextBox>
                </Border>
            </ControlTemplate>
        </RichTextBox.Template>
    </RichTextBox>
</UserControl>
